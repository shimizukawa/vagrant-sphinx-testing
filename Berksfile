# shimizukawa personal settings
cookbook 'shimizukawa-env',
  :git => 'https://github.com/shimizukawa/chef-shimizukawa-env'

# texlive install
cookbook 'texlive',
  :git => 'https://github.com/tk0miya/chef-texlive'


